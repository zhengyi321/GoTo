<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >
    <!-- layout background -->
    <item>
        <!-- show rectangle area -->
        <shape android:shape="rectangle" >
            <!--angle倾斜度 必须为45的倍数-->
            <gradient
                android:angle="270"
                android:startColor="#ffffff"
                android:centerColor="#000"
                android:endColor="#ffffff"/>
        </shape>
    </item>
    <!-- layout foreground -->
    <item
        android:bottom="5px"
        android:top="6px">
        <!-- show rectangle area -->
        <shape android:shape="rectangle" >
            <!--<solid android:color="#FFFFFF" />-->
            <solid android:color="@color/colorActivityAddressManageTopBarWhiteWordBg" />
        </shape>
    </item>
</layer-list>
