<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorActivityAboutGotoContentWhiteBg"
    >



    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/zero"
        android:layout_weight="1.5"
        >
        <ImageView
            android:id="@+id/iv_activity_aboutgoto_content_logo"
            android:layout_width="@dimen/activity_aboutgoto_logo_width"
            android:layout_height="@dimen/activity_aboutgoto_logo_height"
            android:background="@mipmap/ic_launcher"
            android:layout_centerInParent="true"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/gotocityv1.0"
            android:textColor="@color/colorActivityAboutGotoContentBlackWordBg"
            android:textSize="@dimen/activity_aboutgoto_content_word_size"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/iv_activity_aboutgoto_content_logo"
            android:layout_marginTop="@dimen/activity_aboutgoto_logo_name_margin_top_size"
            />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/zero"
        android:layout_weight="1"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/gotoinstru"
            android:textSize="@dimen/activity_aboutgoto_content_word_size"
            android:textColor="@color/colorActivityAboutGotoContentGrayWordBg"
            android:layout_margin="@dimen/activity_aboutgoto_content_margin_size"
            android:layout_centerInParent="true"
            />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/zero"
        android:layout_weight="2.5"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_alignParentBottom="true"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/aboutGoto"
                android:textColor="@color/colorActivityAboutGotoContentGrayWordBg"
                android:textSize="@dimen/activity_aboutgoto_content_word_size"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="30dp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorActivityAboutGotoContentGrayWordBg"
                android:textSize="@dimen/activity_aboutgoto_bottom_rights_word_size"
                android:layout_gravity="center_horizontal"
                android:text="@string/companyrights"
                android:layout_marginBottom="40dp"
                />
        </LinearLayout>

    </RelativeLayout>

</LinearLayout>