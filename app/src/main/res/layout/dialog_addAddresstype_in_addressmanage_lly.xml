<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/transparent"
    android:paddingLeft="55dp"
    android:paddingRight="55dp"
    android:alpha="1"
    android:focusable="true"
    >

    <!--android:src="@drawable/activity_main_ad_bg_white_radius"-->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="160dp"
        android:background="@drawable/activity_main_ad_bg_white_radius"
        android:layout_centerInParent="true"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="124dp"
            android:orientation="vertical"
            >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_centerInParent="true"
            >
            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/inputTheAddressType"
                android:textColor="@color/gray"
                android:textStyle="normal"
                android:layout_centerInParent="true"
                android:textSize="13sp"
                />
        </RelativeLayout>
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="@dimen/the_split_line_height"
                android:background="@color/gray"
                />
            <RelativeLayout
                android:id="@+id/rly_addressmanage_addcontacter"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_centerInParent="true"
                >
                <TextView

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/addContacterAddress"
                    android:textColor="@color/black"
                    android:textStyle="normal"
                    android:layout_centerInParent="true"
                    android:textSize="13sp"
                    />
            </RelativeLayout>
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="@dimen/the_split_line_height"
                android:background="@color/gray"
                />
            <RelativeLayout
                android:id="@+id/rly_addressmanage_addshop"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_centerInParent="true"
                >
                <TextView

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/addSellerAddress"
                    android:textColor="@color/black"
                    android:textStyle="normal"
                    android:layout_centerInParent="true"
                    android:textSize="13sp"
                    />
            </RelativeLayout>
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="@dimen/the_split_line_height"
                android:background="@color/gray"
                />
        </LinearLayout>

        <!-- 取消-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_alignParentBottom="true"
            android:orientation="vertical"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                >


                <RelativeLayout
                    android:id="@+id/rly_addressmanage_cancel"
                    android:layout_width="@dimen/zero"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/cancel"
                        android:textColor="@color/cornflowerblue"
                        android:textSize="13sp"
                        android:textStyle="bold"
                        android:layout_centerInParent="true"
                        />

                </RelativeLayout>
            </LinearLayout>
        </LinearLayout>
    <!-- 取消-->
    </RelativeLayout>


</RelativeLayout>