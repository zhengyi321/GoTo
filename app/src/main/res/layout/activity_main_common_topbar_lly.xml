<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="fill_parent"
    android:layout_height="@dimen/activity_main_common_topbar_height"
    android:background="@color/colorMainActivityTopBarBg"
    >
    <!--侧滑菜单-->
    <RelativeLayout
        android:id="@+id/rly_main_topbar_leftmenu"
        android:layout_width="@dimen/zero"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_weight="1"
        >
    <ImageView
        android:id="@+id/iv_main_topbar_leftmenu"
        android:layout_width="@dimen/activity_main_common_topbar_left_ico_width"
        android:layout_height="@dimen/activity_main_common_topbar_left_ico_height"
        android:background="@drawable/activity_main_left_menu"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/activity_main_common_title_margin_size"
        />
    </RelativeLayout>
    <!--侧滑菜单-->
<!--
    style="@style/main_activity_topbar_title_text_style"
    android:text="@string/main_activity_topbar_title"-->
    <!--标题-->
    <RelativeLayout
        android:layout_width="@dimen/zero"
        android:layout_height="match_parent"
        android:layout_weight="4"
        >
    <TextView
        android:id="@+id/tv_main_topbar_title"
        android:layout_width="@dimen/activity_main_common_topbar_center_title_width"
        android:layout_height="@dimen/activity_main_common_topbar_center_title_height"
        android:background="@drawable/gotosamecity"
        android:layout_centerInParent="true"
        />
    </RelativeLayout>
    <!--标题-->
    <!--搜索栏-->
    <RelativeLayout
        android:layout_width="@dimen/zero"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true"
        android:layout_weight="1"
        android:id="@+id/rly_main_topbar_rightmenu"
        >
    <ImageView
        android:id="@+id/iv_main_topbar_right_search"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:background="@drawable/search_green"
        android:layout_centerVertical="true"
        android:layout_marginRight="@dimen/activity_main_common_title_margin_size"
        android:layout_alignParentRight="true"
        />
    </RelativeLayout>
    <!--搜索栏-->
</LinearLayout>