<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorActivityShoppingListContentBlackBg">
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorActivityShoppingListContentBlackBg"
        >
    <RelativeLayout
        android:id="@+id/rly_shoppinglist_content_paperone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="15dp"
        android:background="@drawable/flurwhitefirst"

        >


    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/rly_shoppinglist_content_papertwo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="22dp"
        android:background="@drawable/flurwhitesecond"

        >

    </RelativeLayout>

     <!--提醒客户仔细订阅外卖-->

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_marginBottom="10dp"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/forUpThePasserSpiderPleaseConfirmCareful"
                android:textColor="@color/colorActivityShoppingListContentGrayWordBg"
                android:textSize="10sp"
                android:layout_centerInParent="true"
                />

        </RelativeLayout>
        <!--提醒客户仔细订阅外卖-->
        <tianhao.agoto.Common.Widget.SwipeCardView.SwipePostCard.SwipePostcard
            android:id="@+id/sp_shoppinglist_content"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_marginBottom="30dp"
            app:maxCount="5"
            app:minDistance="0"
            app:offsetY="24dp"
            >
        </tianhao.agoto.Common.Widget.SwipeCardView.SwipePostCard.SwipePostcard>


    </FrameLayout>

    <RelativeLayout
        android:id="@+id/rly_shoppinglist_i_know"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorHandsPoindBg"
        android:alpha="0.4"
        android:focusableInTouchMode="true"
        android:focusable="true"
        >

        <RelativeLayout
            android:id="@+id/rly_shoppinglist_centermark"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            >

        </RelativeLayout>

        <RelativeLayout

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="40dp"
            android:layout_alignBottom="@id/rly_shoppinglist_centermark"
            >
            <ImageView
                android:id="@+id/iv_shoppinglist_handspointclick"
                android:layout_width="25dp"
                android:layout_height="35dp"
                android:background="@drawable/hands_piont_click"

                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/point_can_add_goodslist"
                android:textColor="@color/white"
                android:layout_toRightOf="@id/iv_shoppinglist_handspointclick"
                android:textSize="11sp"
                android:layout_marginLeft="20dp"
                />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rly_shoppinglist_i_know_click"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="10dp"
            android:paddingTop="10dp"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:background="@drawable/activity_shoppinglist_i_konw_click_white_radius"
            android:layout_below="@id/rly_shoppinglist_centermark"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="30dp"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="@string/i_konw"
                android:textColor="@color/white"
                android:textSize="13sp"

                />


        </RelativeLayout>

    </RelativeLayout>
</RelativeLayout>