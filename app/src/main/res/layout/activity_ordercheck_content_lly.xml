<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/activity_ordercheck_content_tabbar_height"
        android:orientation="horizontal"
        >
        <LinearLayout
            android:id="@+id/linearLayout1"
            android:layout_width="fill_parent"
            android:orientation="horizontal"
            android:layout_height="@dimen/activity_helpmesendaddcontacter_tabbar_height"
            android:background="@color/colorActivityMyOrderContentBlackBg" >

            <!--订单状态-->

            <RelativeLayout
                android:id="@+id/rly_helpmesendaddcontacter_tabbar_history"
                android:layout_width="@dimen/zero"
                android:layout_height="match_parent"
                android:layout_weight="1"
                >

                <TextView
                    android:id="@+id/tv_helpmesendaddcontacter_tabbar_history"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:text="@string/orderStatus"
                    android:textSize="14sp"
                    android:textColor="@color/colorActivityMyOrderTabSwitchSelectedWordGreenBg" />

            </RelativeLayout>
            <!--订单状态-->
            <!--订单详情-->
            <RelativeLayout
                android:id="@+id/rly_helpmesendaddcontacter_tabbar_collectaddress"
                android:layout_width="@dimen/zero"
                android:layout_height="match_parent"
                android:layout_weight="1"
                >
                <TextView
                    android:id="@+id/tv_helpmesendaddcontacter_tabbar_collectaddress"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:textSize="14sp"
                    android:text="@string/orderDetail"
                    android:textColor="@color/colorActivityMyOrderTabSwitchUnSelectedWordGrayBg" />

            </RelativeLayout>
            <!--订单详情-->
        </LinearLayout>
        <ImageView
            android:id="@+id/iv_helpmesendaddcontacter_tab_greenbottom"
            android:layout_width="@dimen/activity_myorder_tabbar_bottom_green_width"
            android:layout_height="@dimen/activity_myorder_tabbar_bottom_green_height"
            android:scaleType="matrix"
            android:src="@color/colorActivityMyOrderTabSwitchGreenBg"
            android:layout_marginLeft="50dp"
            />
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="@dimen/the_split_line_height"
            android:background="@color/colorActivityMyOrderContentSplitLineGrayBg"
            />

    </LinearLayout>
    <android.support.v4.view.ViewPager
        android:layout_width="match_parent"
        android:layout_height="match_parent">


    </android.support.v4.view.ViewPager>
</LinearLayout>