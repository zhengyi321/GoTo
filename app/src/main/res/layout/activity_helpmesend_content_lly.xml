    <!--物品种类 收件时间-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/activity_helpmesend_content_normalitem_height"
        android:background="@color/colorHelpMeSendActivityContentItemWhiteBg"
        android:layout_marginTop="@dimen/activity_helpmesend_content_normalitem_margin_normalitem_size"
        android:orientation="horizontal"
        >
        <LinearLayout
            android:id="@+id/lly_helpmesend_content_goodstype"
            android:layout_width="@dimen/zero"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:paddingLeft="@dimen/activity_helpmesend_content_goodsinfo_margin_left_right_size"
            android:paddingRight="@dimen/activity_helpmesend_content_goodsinfo_margin_left_right_size"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/zero"
                android:layout_weight="1"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/goodsType"
                    android:textColor="@color/colorHelpMeSendActivityContentItemGrayBg"
                    android:textSize="12sp"
                    android:layout_gravity="center_vertical"
                    />
            </LinearLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/zero"
                android:layout_weight="1"
                >
                <TextView
                    android:id="@+id/tv_helpmesend_content_goodstype"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:textColor="@color/colorHelpMeSendActivityContentItemBlackBg"
                    android:textSize="16sp"
                    android:layout_centerVertical="true"
                    android:layout_alignParentLeft="true"
                    />
                <ImageView
                    android:layout_width="@dimen/activity_helpmebuy_content_item_right_arrow_width"
                    android:layout_height="@dimen/activity_helpmebuy_content_item_right_arrow_height"
                    android:background="@drawable/rightarrow"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    />

            </RelativeLayout>

        </LinearLayout>
        <!--物品重量-->

        <!--配送里程-->

        <LinearLayout
            android:id="@+id/lly_helpmesend_content_rectime"
            android:layout_width="@dimen/zero"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:paddingLeft="@dimen/activity_helpmesend_content_goodsinfo_margin_left_right_size"
            android:paddingRight="@dimen/activity_helpmesend_content_goodsinfo_margin_left_right_size"
            android:orientation="vertical"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/zero"
                android:layout_weight="1"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
