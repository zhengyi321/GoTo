                    android:textSize="13sp"
                    android:textStyle="bold"
                    android:layout_marginRight="@dimen/activity_helpmebuy_content_item_name_margin_tel_size"
                    />
                <!--<TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
