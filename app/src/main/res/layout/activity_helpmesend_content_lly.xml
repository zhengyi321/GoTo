    <!--订单备注--><!--android:layout_weight="1.5"-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/activity_helpmesend_content_have_edittext_item_height"
        android:background="@color/colorHelpMeBuyActivityItemWhiteBg"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/activity_helpmebuy_content_buyorder_item_margin_top_size"
        android:layout_marginBottom="@dimen/activity_helpmesend_content_margin_bottom_size"
        >
        <RelativeLayout
            android:layout_width="@dimen/zero"
            android:layout_height="match_parent"
            android:layout_weight="1"
            >
            <ImageView
                android:layout_width="@dimen/activity_helpmebuy_content_orderremark_width"
                android:layout_height="@dimen/activity_helpmebuy_content_orderremark_height"
                android:background="@drawable/orderremark"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/activity_helpmebuy_content_point_margin_top_size"
                />

        </RelativeLayout>
        <LinearLayout
            android:layout_width="@dimen/zero"
            android:layout_height="match_parent"
            android:layout_weight="6"
            android:orientation="vertical"
            >
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/zero"
                android:layout_weight="0.85"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/orderRemark"
                    android:textColor="@color/colorHelpMeBuyActivityContentBuyAddressBlackAddress"
                    android:textSize="13dp"
                    android:textStyle="bold"
                    android:layout_centerVertical="true"/>
            </RelativeLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/zero"
                android:layout_weight="2"
                android:orientation="horizontal"
                >
                <!--edittext焦点问题就是在父控件里假如focusable 和focusableintouchmod属性 输入从开始处开始必须gravity=start-->
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginRight="@dimen/activity_helpmebuy_content_shoppingorder_edittext_margin_right_size"
                    android:layout_marginTop="@dimen/activity_helpmebuy_content_shoppingorder_edittext_margin_top_bottom_size"
                    android:layout_marginBottom="@dimen/activity_helpmebuy_content_shoppingorder_edittext_margin_right_size"
                    android:gravity="start"
                    android:background="@null"
                    android:textSize="13sp"
                    android:textColor="@color/colorHelpMeBuyActivityContentBuyAddressGrayAddress"
                    android:windowSoftInputMode="stateHidden|adjustResize"

                    />
                <!--edittext焦点问题就是在父控件里假如focusable 和focusableintouchmod属性 输入从开始处开始必须gravity=start-->
            </LinearLayout>



        </LinearLayout>
    </LinearLayout>




</LinearLayout>